{
  "compilerOptions": {
    "target": "ES2023",
    "module": "NodeNext",
    "baseUrl": "src",
    "rootDir": ".",
    "paths": {
      "@factories": [
        "main/factories"
      ],
      "@routes": [
        "main/routes"
      ],
      "@ports/*": [
        "main/ports/*"
      ],
      "@tests/*": [
        "../tests/*"
      ],
      "@settings/*": [
        "../settings/*"
      ],
      "@/*": [
        "*"
      ]
    },
    "outDir": "./",
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    "vitest/**/*"
  ]
}